[Unit]
Description=Planedge Gateway
After=network.target

[Service]
Type=simple
User=planedge
WorkingDirectory=/opt/planedge-gateway
ExecStart=/usr/bin/node /opt/planedge-gateway/dist/index.js
Restart=on-failure
Environment=NODE_ENV=production
# EnvironmentFile=/opt/planedge-gateway/.env

[Install]
WantedBy=multi-user.target
